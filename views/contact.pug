extends base.pug

block scripts
  script(src='static/index.js')

block style
  style
        include ../static/style.css
        include ../static/styleContact.css

block content
    div.container
        h1 Contact Us
        form(action="/contact", method="post")
            input(type="text", id="myText", placeholder="Enter your name")
            input(type="age", id="myText", placeholder="Enter your age")
            input(type="phone", id="myText", placeholder="Enter your phone number")
            input(type="email", id="myText", placeholder="Enter your email id")
            input(type="gender", id="myText", placeholder="Enter your gender")
            input(type="address", id="myText", placeholder="Enter your address")
            button(class="btn")
                | Submit
    
    